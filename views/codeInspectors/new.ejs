<%- include('../partials/header.ejs')%>
<main>
<h2>Code Inspector Sign Up</h2>

    <section class="content-section container">
    <form class="login-form" action = '/codeInspectors' method = 'POST'>
        <div class='form-row'>
            <label for='First_Name'>First Name: </label>
            <input id='First_Name' name='First_Name' type='text' required>
        </div>
        <div class='form-row'>
            <label for='Last_Name'>Last Name: </label>
            <input id='Last_Name' name='Last_Name' type='text' required>
        </div>
         <div class='form-row'>
            <label for='CEO_ID'>CEO ID: </label>
            <input id='CEO_ID' name='CEO_ID' type='text' placeholder="12345.." required>
         </div>
        <div class='form-row'>
            <label for='email'>Email: </label>
            <input id='email' name='email' type='text' placeholder="eg. name@gmail.com" required>
        </div>
        <div class='form-row'>
            <label for='password'>Password: </label>
            <input id='password' name='password' type='password' minlength="8" maxlength="64" required>
        </div> 
        <div class="form-buttons">
            <div class="form-btn">
                <button class="btn btn-primary">SIGN UP</button>
            </div>
        </div>
    </form>
</section>
</main>

    <%- include('../partials/footer.ejs')%>


